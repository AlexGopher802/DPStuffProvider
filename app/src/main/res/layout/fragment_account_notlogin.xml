<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AccountNotLoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/accTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_above="@id/accImageAvatar"
            android:textSize="20sp"
            android:textColor="@color/mainDark"
            android:text="Вы еще не вошли в аккаунт..."/>

        <ImageView
            android:id="@+id/accImageAvatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/avatar1"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@color/mainButton"
            android:textColor="@color/mainDark"
            android:layout_below="@id/accImageAvatar"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:text="Войти"/>

    </RelativeLayout>

</FrameLayout>