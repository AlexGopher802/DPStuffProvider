<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Личный кабинет"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:textColor="#19191A"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nameCourier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Суслин Александр Михайлович"
            android:layout_below="@id/cardTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="19sp"
            android:textColor="@color/mainDark"/>

        <ImageView
            android:id="@+id/accImageAvatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/nameCourier"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/avatar1"/>

        <TextView
            android:id="@+id/tvAccPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/accImageAvatar"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:textColor="@color/mainDark"
            android:text="Телефон: 89295771369"/>

        <TextView
            android:id="@+id/tvAccEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAccPhone"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:textColor="@color/mainDark"
            android:text="Почта: example@mail.ru"/>

        <TextView
            android:id="@+id/tvAccOrdersQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAccEmail"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:textColor="@color/mainDark"
            android:text="Выполненных заказов: 0"/>

        <Button
            android:id="@+id/btnExit"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@color/mainButton"
            android:textColor="@color/mainDark"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="12sp"
            android:text="Выйти"/>



    </RelativeLayout>


</FrameLayout>