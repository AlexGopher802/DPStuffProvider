<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AccountLoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldLogin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            android:layout_below="@id/imgLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:hint="Введите логин"
            app:boxBackgroundColor="#ffffff">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTextLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:maxLength="100"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            android:layout_below="@id/textFieldLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:hint="Введите пароль"
            app:boxBackgroundColor="#ffffff">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTextPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:maxLength="100"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@color/mainButton"
            android:textColor="@color/mainDark"
            android:layout_below="@id/textFieldPassword"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:layout_marginTop="60dp"
            android:text="Войти"/>

        <Button
            android:id="@+id/btnReg"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:textColor="@color/mainDark"
            android:layout_below="@id/btnLogin"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:text="Зарегистрироваться"/>

    </RelativeLayout>

</FrameLayout>