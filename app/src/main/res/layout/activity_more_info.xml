<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreInfo">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:textSize="21sp"
            android:textColor="@color/mainDark"
            android:textAlignment="center"
            android:text="Адрес"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardAddress"
        android:padding="12dp"
        android:textSize="20sp"
        android:textColor="@color/mainDark"
        android:text="г. Москва, ул. Какая-то д.35"/>

    <LinearLayout
        android:id="@+id/llHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_below="@id/tvAddress">

        <TextView
            android:id="@+id/tvFrontDoor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Подъезд: 4"
            android:textColor="@color/mainDark"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tvFloorNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Этаж: 5"
            android:textColor="@color/mainDark"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tvAppartmentNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Квартира: 77"
            android:textColor="@color/mainDark"
            android:textSize="17sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvIntercom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:text="Домофон: 77к917877"
        android:textColor="@color/mainDark"
        android:layout_below="@id/llHome"/>

    <Button
        android:id="@+id/btnCheckMap"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:text="Посмотреть на карте"
        android:textColor="@color/mainDark"
        android:textSize="11sp"
        android:background="@color/mainButton"
        android:layout_below="@id/tvIntercom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/btnCheckMap">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:textSize="21sp"
            android:textColor="@color/mainDark"
            android:textAlignment="center"
            android:text="Клиент"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvClientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Александр Михайлович"
        android:textSize="20sp"
        android:textColor="@color/mainDark"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_below="@id/cardClient"/>

    <TextView
        android:id="@+id/tvClientPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvClientName"
        android:text="Телефон: +79295771369"
        android:textColor="@color/mainLink"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textSize="19sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/tvClientPhone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:textSize="21sp"
            android:textColor="@color/mainDark"
            android:textAlignment="center"
            android:text="Состав заказа"/>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cardOrder"
        android:layout_above="@id/btnConfirmOrder"
        tools:listitem="@layout/order_products_item"/>

    <Button
        android:id="@+id/btnConfirmOrder"
        android:layout_width="130dp"
        android:layout_height="38dp"
        android:layout_marginRight="5dp"
        android:text="Взять заказ"
        android:textColor="@color/mainDark"
        android:textSize="12sp"
        android:background="@color/mainButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnEndOrder"
        android:layout_width="130dp"
        android:layout_height="38dp"
        android:layout_marginRight="5dp"
        android:text="Завершить заказ"
        android:textColor="@color/mainDark"
        android:textSize="12sp"
        android:background="@color/mainButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone"/>

</RelativeLayout>